<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzy.liujing.restaurant.dao.UserRoleDao">

    <insert id="insert" parameterType="com.lzy.liujing.restaurant.entity.UserRole">
        insert into sys_user_role(user_id,role_id) value(#{userId},#{roleId})
    </insert>

    <update id="update" parameterType="com.lzy.liujing.restaurant.entity.UserRole">
        update sys_user_role set role_id=#{roleId} where user_id = #{userId}
    </update>
</mapper>
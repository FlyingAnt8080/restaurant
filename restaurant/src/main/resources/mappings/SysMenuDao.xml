<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzy.liujing.restaurant.dao.SysMenuDao">
    <sql id="join">
        INNER JOIN sys_role_menu as rm on rm.menu_id =  m.menu_id
        INNER JOIN sys_role as r on r.role_id = rm.role_id
    </sql>
    <sql id="fields">
        m.menu_id,
        m.menu_name,
        m.parent_id,
        m.parent_ids,
        m.is_show,
        m.permission,
        m.menu_href,
        m.menu_icon,
        m.weight,
        m.del
    </sql>
    <!--等同于 SQL语句 select * from sys_menu where role_name in()-->
    <sql id="where">
        <where>
            <if test="condition!=null and condition.list !=null">
                r.role_name in
                <foreach collection="condition.list" item="item"  open="("  close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            and m.del = 0
        </where>
    </sql>
    <select id="findById" parameterType="Long" resultType="com.lzy.liujing.restaurant.entity.SysMenu">
        SELECT
        <include refid="fields"/>
        FROM sys_menu as m
        <include refid="join"/>

    </select>
    
    <select id="findList" parameterType="com.lzy.liujing.restaurant.entity.SysMenu" resultType="com.lzy.liujing.restaurant.entity.SysMenu">
        SELECT
        <include refid="fields"/>
        FROM sys_menu as m
        <include refid="join"/>
        <include refid="where"/>
    </select>
</mapper>